@model WebApplication1.Models.TypeProduct

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="border p-4 shadow-sm rounded">
                <table class="table table-bordered table-striped table-hover mt-3">
                    <thead class="thead-light">
                        <tr>
                            <th>รหัสประเภทสินค้า</th>
                            <th>ชื่อประเภทสินค้า</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Html.DisplayFor(t => t.type_id)</td>
                            <td>@Html.DisplayFor(t => t.type_name)</td>
                        </tr>
                    </tbody>
                </table>

                <div class="form-group mt-3">
                    <a asp-action="Index" class="btn btn-primary btn-block">กลับไปยังหน้าแรก</a>
                </div>
            </div>
        </div>
    </div>
</div>
