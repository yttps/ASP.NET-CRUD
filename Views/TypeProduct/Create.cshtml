@model WebApplication1.Models.TypeProduct //get str in textfield
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: '@TempData["SuccessMessage"]'
                });
            </text>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: '@TempData["ErrorMessage"]'
                });
            </text>
        }
    </script>
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="border p-4 shadow-sm rounded">
                <div class="form-group">
                    <label for="type_name" class="form-label">ชื่อรหัสสินค้า</label>
                    <input asp-for="type_name" class="form-control" id="type_name" type="name" placeholder="กรุณากรอกชื่อรหัสสินค้า" />
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Create" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
    </div>
</div>




