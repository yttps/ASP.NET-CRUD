@model WebApplication1.Models.CustomerModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="border p-4 shadow-sm rounded">
                <!-- ตาราง responsive -->
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover mt-3">
                        <thead class="thead-light">
                            <tr>
                                <th>รหัสลูกค้า</th>
                                <th>ชื่อ</th>
                                <th>นามสกุล</th>
                                <th>ที่อยู่</th>
                                <th>วันเกิด</th>
                                <th>เพศ</th>
                                <th>Username</th>
                                <th>Password</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Html.DisplayFor(t => t.cus_id)</td>
                                <td>@Html.DisplayFor(t => t.cus_name)</td>
                                <td>@Html.DisplayFor(t => t.cus_lname)</td>
                                <td>@Html.DisplayFor(t => t.cus_add)</td>
                                <td>@Html.DisplayFor(t => t.bdate)</td>
                                <td>@Html.DisplayFor(t => t.sex)</td>
                                <td>@Html.DisplayFor(t => t.username)</td>
                                <td>@Html.DisplayFor(t => t.password)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="form-group mt-3">
                    <a asp-action="Index" class="btn btn-primary btn-block">กลับไปยังหน้าแรก</a>
                </div>
            </div>
        </div>
    </div>
</div>

